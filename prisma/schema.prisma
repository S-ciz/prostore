generator client {
  provider = "prisma-client-js"
//  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url= env("DATABASE_URL")
}

model Product {
  
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  category String
  description String
  images String[]
  price Decimal
  stock Int @default(0)
  brand String 
  rating Decimal 
  numReviews Int
  isFeatured Boolean @default(false)
  banner String? 
  createdAt DateTime @default(now())

}
